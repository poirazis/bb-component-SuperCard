{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "bb-component-SuperCard",
    "friendlyName": "Super Card",
    "description": "A Card component for Budibase",
    "hasChildren": true,
    "showEmptyState": false,
    "icon": "Card",
    "styles": ["padding", "size", "border", "background"],
    "settings": [
      {
        "type": "select",
        "key": "cardType",
        "label": "Card Type",
        "defaultValue": "horizontal",
        "options": [
          {
            "label": "Horizontal",
            "value": "horizontal"
          },
          {
            "label": "Vertical",
            "value": "vertical"
          },
          {
            "label": "Full Image",
            "value": "image"
          }
        ]
      },
      {
        "type": "text",
        "key": "title",
        "label": "Title",
        "defaultValue": "Super Card"
      },
      {
        "type": "text",
        "key": "subtitle",
        "label": "Subtitle",
        "defaultValue": "Card Subtitle"
      },
      {
        "type": "text",
        "key": "text",
        "label": "Text",
        "defaultValue": "{{ lorem 100 }}"
      },
      {
        "type": "boolean",
        "key": "showImage",
        "label": "Show Image",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "padded",
        "label": "Padded",
        "dependsOn": "showImage",
        "defaultValue": true,
        "resetOn": "showImage"
      },
      {
        "type": "text",
        "key": "imageUrl",
        "label": "Image URL",
        "dependsOn": "showImage",
        "defaultValue": "https://picsum.photos/seed/picsum/200/300"
      },
      {
        "type": "buttonConfiguration",
        "key": "buttons",
        "label": "Card Menu",
        "wide": true
      },
      {
        "type": "boolean",
        "key": "collapsed",
        "label": "Collapsed"
      },
      {
        "type": "icon",
        "key": "menuIcon",
        "label": "Icon",
        "defaultValue": "ri-more-2-fill",
        "dependsOn": "collapsed"
      },
      {
        "section": true,
        "name": "Footer Settings",
        "settings": [
          {
            "type": "boolean",
            "key": "showFooter",
            "label": "Show Footer",
            "defaultValue": true
          },
          {
            "type": "text",
            "key": "footer",
            "label": "Footer Text",
            "defaultValue": "Card Footer"
          },
          {
            "type": "buttonConfiguration",
            "key": "footerButtons",
            "label": "Footer Menu",
            "wide": true
          }
        ]
      },

      {
        "tag": "style",
        "type": "select",
        "label": "Flex Mode",
        "showLabel": false,
        "key": "flex",
        "showInBar": true,
        "barStyle": "buttons",
        "options": [
          {
            "label": "Shrink",
            "value": false,
            "barIcon": "Minimize",
            "barTitle": "Shrink container"
          },
          {
            "label": "Grow",
            "value": true,
            "barIcon": "Maximize",
            "barTitle": "Grow container"
          }
        ],
        "defaultValue": false
      }
    ]
  }
}
